    private void idActionPerformed(java.awt.event.ActionEvent evt) {                                   
        // TODO add your handling code here:
    }                                  

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        DefaultTableModel model = (DefaultTableModel)jTable1.getModel();
        model.addRow(new Object[]{id.getText(), fn.getText(),
                                  ln.getText(), age.getText()});
    }                                        

    private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {                                     
        // TODO add your handling code here:
        DefaultTableModel model = (DefaultTableModel)jTable1.getModel();
        int selectedRowIndex = jTable1.getSelectedRow();
        id.setText(model.getValueAt(selectedRowIndex, 0).toString());
        fn.setText(model.getValueAt(selectedRowIndex, 1).toString());
        ln.setText(model.getValueAt(selectedRowIndex, 2).toString());
        age.setText(model.getValueAt(selectedRowIndex, 3).toString());
    }                                    

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        int i = jTable1.getSelectedRow();
       DefaultTableModel model = (DefaultTableModel)jTable1.getModel();
        if(i>=0){
            model.setValueAt(id.getText(), i, 0);
            model.setValueAt(fn.getText(), i, 1);
            model.setValueAt(ln.getText(), i, 2);
            model.setValueAt(age.getText(), i, 3);
        }else {
            JOptionPane.showMessageDialog(null, "Error");
        } 
    }                                        

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        DefaultTableModel model = (DefaultTableModel)jTable1.getModel();
        if(jTable1.getSelectedRowCount()==1){
            model.removeRow(jTable1.getSelectedRow());
        }else {
            if(jTable1.getSelectedRowCount()==0){
                JOptionPane.showMessageDialog(null, "The Table is Empty.");
            }
            JOptionPane.showMessageDialog(null, "Please select a Row to delete.");
        } 
    }                                        

